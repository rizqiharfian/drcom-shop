<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title>Daftar Produk</title>
  <link rel="icon" href="/drcom.png" type="image/png">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Admin Pembelian</a>
      <a class="btn btn-outline-light ms-auto" href="/">‚Üê Kembali</a>
    </div>
  </nav>

  <div class="container">
    <h3 class="mb-4 text-center">Daftar Produk</h3>
    <div class="row row-cols-1 row-cols-md-3 g-4">
      <% produk.forEach(p => { %>
        <div class="col">
          <div class="card h-100 text-center shadow-sm">
            
            <% if (p.gambar_list && p.gambar_list.length > 0) { %>
              <div id="carousel<%= p.id %>" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                  <% p.gambar_list.forEach((g, index) => { %>
                    <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                      <img src="/media/<%= g %>" class="d-block w-100 rounded-top"
                           style="height: 200px; object-fit: contain; background-color: #f8f9fa;">
                    </div>
                  <% }) %>
                </div>
                <% if (p.gambar_list.length > 1) { %>
                  <button class="carousel-control-prev" type="button" data-bs-target="#carousel<%= p.id %>" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon"></span>
                  </button>
                  <button class="carousel-control-next" type="button" data-bs-target="#carousel<%= p.id %>" data-bs-slide="next">
                    <span class="carousel-control-next-icon"></span>
                  </button>
                <% } %>
              </div>
            <% } else { %>
              <img src="/media/default.jpg" class="card-img-top"
                   style="height: 200px; object-fit: contain; background-color: #f8f9fa;">
            <% } %>

            <div class="card-body">
              <h5 class="card-title"><%= p.nama %></h5>
              <p class="card-text text-muted"><%= p.keterangan %></p>
            </div>
            <div class="card-footer bg-light text-muted">
              Stok: <strong><%= p.jumlah_stok %></strong>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>