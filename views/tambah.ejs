<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title>Tambah Pembelian</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <nav class="navbar navbar-dark bg-dark mb-4">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">← Kembali</a>
      <span class="navbar-text text-white">Tambah Pembelian</span>
    </div>
  </nav>

  <div class="container">
    <div class="card shadow-sm">
      <div class="card-header bg-primary text-white">
        Form Tambah Pembelian
      </div>
      <div class="card-body">
        <form method="POST" action="/beli" class="row g-3">
          <div class="col-md-6">
            <label for="produk_id" class="form-label">Pilih Produk</label>
            <select name="produk_id" id="produk_id" class="form-select" required>
              <% produk.forEach(p => { %>
                <option value="<%= p.id %>"><%= p.nama %></option>
              <% }) %>
            </select>
          </div>
          <div class="col-md-6">
            <label for="jumlah" class="form-label">Jumlah</label>
            <input type="number" name="jumlah" id="jumlah" class="form-control" min="1" required placeholder="Masukkan jumlah pembelian">
          </div>
          <div class="col-12 d-flex justify-content-end">
            <button type="submit" class="btn btn-success">Simpan Pembelian</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
