<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Edit Barang Keluar #<%= transaksi.id %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
  <style>.thumb { width:80px; height:80px; object-fit:cover; border-radius:6px; }</style>
</head>
<body class="bg-light">
  <div class="container mt-4">
    <a class="btn btn-sm btn-outline-secondary mb-3" href="/">← Kembali</a>

    <div class="card">
      <div class="card-header">Edit Barang Keluar — Ref #<%= transaksi.id %></div>
      <div class="card-body">
        <form method="POST" action="/barang-keluar/edit/<%= transaksi.id %>" enctype="multipart/form-data">
          <div class="mb-3">
            <label class="form-label">Tujuan</label>
            <input name="tujuan" class="form-control" value="<%= transaksi.tujuan %>" required>
          </div>

          <% if (items && items.length > 0) { %>
            <% items.forEach((it, idx) => { %>
              <div class="border rounded p-3 mb-3">
                <input type="hidden" name="detail_id" value="<%= it.detail_id %>">
                <div class="row g-2 align-items-center">
                  <div class="col-md-3 text-center">
                    <% if (it.gambar) { %>
                      <img src="/media/<%= it.gambar %>" class="thumb mb-2" alt="gambar">
                    <% } else { %>
                      <div class="border rounded p-2 text-muted mb-2" style="height:80px; display:flex;align-items:center;justify-content:center;">No image</div>
                    <% } %>
                    <div class="mb-1">
                      <label class="form-label small mb-0">Ganti gambar (opsional)</label>
                      <input type="file" name="gambar_<%= it.detail_id %>" accept="image/*" class="form-control form-control-sm">
                    </div>
                  </div>

                  <div class="col-md-9">
                    <div class="row g-2">
                      <div class="col-md-6">
                        <label class="form-label">Produk</label>
                        <select name="produk_id" class="form-select" required>
                          <% produkList.forEach(p => { %>
                            <option value="<%= p.id %>" <%= (p.id === it.produk_id) ? 'selected' : '' %>><%= p.nama %></option>
                          <% }) %>
                        </select>
                      </div>
                      <div class="col-md-3">
                        <label class="form-label">Jumlah</label>
                        <input type="number" name="jumlah" min="1" class="form-control" value="<%= it.jumlah %>" required>
                      </div>
                      <div class="col-md-3">
                        <label class="form-label">Ref ID</label>
                        <input class="form-control" value="<%= it.detail_id %>" readonly>
                      </div>
                      <div class="col-12 mt-2">
                        <label class="form-label">Keterangan</label>
                        <input type="text" name="keterangan" class="form-control" value="<%= it.keterangan || '' %>">
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            <% }) %>
          <% } else { %>
            <p class="text-muted">Tidak ada item.</p>
          <% } %>

          <div class="text-end">
            <button type="submit" class="btn btn-primary">Simpan Perubahan</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
