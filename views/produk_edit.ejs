<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title>Edit Produk: <%= p.nama %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <div class="container mt-4">
    <a class="btn btn-sm btn-outline-secondary mb-3" href="/produk/<%= p.id %>">â† Kembali</a>

    <div class="card">
      <div class="card-body">
        <form action="/produk/<%= p.id %>" method="POST" enctype="multipart/form-data">
          <div class="mb-3">
            <label class="form-label">Nama</label>
            <input type="text" name="nama" class="form-control" value="<%= p.nama %>" required>
          </div>

          <div class="mb-3">
            <label class="form-label">Merk (Brand)</label>
            <select name="brand_id" class="form-select">
              <option value="">-- Pilih Merk (opsional) --</option>
              <% (brands||[]).forEach(b => { %>
                <option value="<%= b.id %>" <%= (p.brand_id == b.id) ? 'selected' : '' %>><%= b.name %></option>
              <% }) %>
            </select>
          </div>

          <div class="mb-3">
            <label class="form-label">Gambar (upload tambahan)</label>
            <input type="file" name="gambar" class="form-control" accept="image/*" multiple>
            <div class="mt-2 d-flex gap-2">
              <% p.gambar_list.forEach(fn => { %>
                <img src="/media/<%= fn %>" style="width:80px;height:80px;object-fit:cover;border-radius:6px;">
              <% }) %>
            </div>
            <div class="form-text">Upload gambar baru akan ditambahkan ke yang sudah ada.</div>
          </div>

          <div class="mb-3">
            <label class="form-label">Keterangan</label>
            <textarea name="keterangan" class="form-control" rows="3"><%= p.keterangan || '' %></textarea>
          </div>

          <div class="mb-3">
            <label class="form-label">Perubahan stok (positif menambah, negatif mengurangi)</label>
            <input type="number" name="stok_change" class="form-control" value="0">
            <div class="form-text">Stok saat ini: <strong><%= stok %></strong></div>
          </div>

          <button class="btn btn-primary" type="submit">Simpan Perubahan</button>
        </form>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
