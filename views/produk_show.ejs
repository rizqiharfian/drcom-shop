<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title>Produk: <%= p.nama %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <div class="container mt-4">
    <a class="btn btn-sm btn-outline-secondary mb-3" href="/produk">‚Üê Kembali</a>
    <div class="card mb-3">
      <div class="row g-0">
        <div class="col-md-4 p-3 d-flex align-items-center justify-content-center">
          <% if (p.gambar_list && p.gambar_list.length > 0) { %>
            <img src="/media/<%= p.gambar_list[0] %>" class="img-fluid" style="max-height:300px; object-fit:contain;">
          <% } else { %>
            <img src="/media/default.jpg" class="img-fluid" style="max-height:300px; object-fit:contain;">
          <% } %>
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h3><%= p.nama %></h3>
            <p class="text-muted"><%= p.brand_name ? 'Merk: ' + p.brand_name : '' %></p>
            <p><%= p.keterangan || '-' %></p>
            <p><strong>Stok:</strong> <%= p.jumlah_stok %></p>
            <div class="mt-3">
              <a href="/produk/<%= p.id %>/edit" class="btn btn-warning">Edit</a>
              <a href="/produk" class="btn btn-secondary">Kembali ke daftar</a>
            </div>
          </div>
        </div>
      </div>
    </div>

    <% if (p.gambar_list && p.gambar_list.length > 1) { %>
      <h5>Gambar lain</h5>
      <div class="d-flex flex-wrap gap-2">
        <% p.gambar_list.forEach(fn => { %>
          <img src="/media/<%= fn %>" style="width:120px;height:120px;object-fit:cover;border-radius:6px;">
        <% }) %>
      </div>
    <% } %>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
